<Window x:Class="ClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:ClientWPF"
        mc:Ignorable="d"
        Title="FTP Клиент" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Шаблон для отображения папок и файлов (упрощенный) -->
        <HierarchicalDataTemplate x:Key="ItemTemplate" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                <!-- Используем DataTrigger вместо конвертера -->
                <TextBlock x:Name="folderText" Text=" (папка)" Foreground="Gray" Margin="5,0,0,0"/>
                <TextBlock x:Name="fileSize" Text="{Binding Size}" Foreground="Blue" Margin="10,0,0,0"/>
            </StackPanel>
            <HierarchicalDataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsDirectory}" Value="True">
                    <Setter TargetName="folderText" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="fileSize" Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsDirectory}" Value="False">
                    <Setter TargetName="folderText" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="fileSize" Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </HierarchicalDataTemplate.Triggers>
        </HierarchicalDataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель подключения -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Сервер:" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox x:Name="txtIpAddress" Grid.Column="1" Text="127.0.0.1"/>

                <TextBlock Text="Порт:" Grid.Column="2" Foreground="White" VerticalAlignment="Center" Margin="10,0,8,0"/>
                <TextBox x:Name="txtPort" Grid.Column="3" Text="8888"/>

                <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,15,0">
                    <TextBlock Text="Логин:" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="txtLogin" Text="Horoshev" Width="120" Margin="0,0,15,0"/>

                    <TextBlock Text="Пароль:" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <PasswordBox x:Name="txtPassword" Password="Asdfg123" Width="120"/>
                </StackPanel>

                <Button x:Name="btnConnect" Grid.Column="5" Content="Подключиться" 
                        Click="BtnConnect_Click" Background="#4CAF50" Foreground="White"
                        Padding="10,5" Margin="0,0,10,0" FontWeight="Bold"/>

                <Button x:Name="btnLogin" Grid.Column="6" Content="Войти" 
                        Click="BtnLogin_Click" Background="#FF9800" Foreground="White"
                        Padding="10,5" IsEnabled="False" FontWeight="Bold"/>
            </Grid>
        </Border>

        <!-- Основная рабочая область -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель: Дерево файлов сервера -->
            <Border Grid.Column="0" Margin="10" BorderBrush="#CCCCCC" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок и кнопки управления -->
                    <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#CCCCCC" 
                            BorderThickness="0,0,0,1" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Файлы на сервере" FontSize="16" FontWeight="Bold" 
                                       Foreground="#333333" VerticalAlignment="Center"/>
                            <Button x:Name="btnRefresh" Content="Обновить" Click="BtnRefresh_Click" 
                                    Margin="15,0,0,0" Background="#607D8B" Foreground="White"
                                    Padding="8,4" IsEnabled="False"/>
                        </StackPanel>
                    </Border>

                    <!-- Дерево файлов -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <TreeView x:Name="treeServerFiles" 
                                  VirtualizingStackPanel.IsVirtualizing="True"
                                  ItemsSource="{Binding}"
                                  ItemTemplate="{StaticResource ItemTemplate}"
                                  BorderThickness="0">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                </Style>
                            </TreeView.ItemContainerStyle>
                        </TreeView>
                    </ScrollViewer>

                    <!-- Информация о выбранном элементе -->
                    <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#CCCCCC" 
                            BorderThickness="0,1,0,0" Padding="10">
                        <StackPanel>
                            <TextBlock x:Name="txtSelectedItem" Text="Не выбран файл" 
                                       FontStyle="Italic" Foreground="#666666"/>
                            <TextBlock x:Name="txtPathInfo" Text="" FontSize="11" 
                                       Foreground="#999999" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Разделитель -->
            <GridSplitter Grid.Column="1" Width="5" Background="#CCCCCC" HorizontalAlignment="Stretch"/>

            <!-- Правая панель: Управление -->
            <Border Grid.Column="2" Margin="10" BorderBrush="#CCCCCC" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#CCCCCC" 
                            BorderThickness="0,0,0,1" Padding="10">
                        <TextBlock Text="Действия" FontSize="16" FontWeight="Bold" Foreground="#333333"/>
                    </Border>

                    <!-- Кнопки управления -->
                    <StackPanel Grid.Row="1" Margin="15">
                        <Border Background="#E8F5E8" BorderBrush="#4CAF50" BorderThickness="1" 
                                CornerRadius="5" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="СКАЧАТЬ ФАЙЛ" FontWeight="Bold" 
                                           Foreground="#2E7D32" Margin="0,0,0,10"/>
                                <TextBlock Text="Скачать выбранный файл с сервера в папку Debug" 
                                           TextWrapping="Wrap" Foreground="#666666" Margin="0,0,0,10"/>
                                <Button x:Name="btnGetFile" Content="СКАЧАТЬ (GET)" 
                                        Click="BtnGetFile_Click" Background="#4CAF50" Foreground="White"
                                        Height="40" FontSize="14" FontWeight="Bold" IsEnabled="False"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1" 
                                CornerRadius="5" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="ЗАГРУЗИТЬ ФАЙЛ" FontWeight="Bold" 
                                           Foreground="#1565C0" Margin="0,0,0,10"/>
                                <TextBlock Text="Загрузить файл с компьютера на сервер" 
                                           TextWrapping="Wrap" Foreground="#666666" Margin="0,0,0,10"/>
                                <Button x:Name="btnSetFile" Content="ЗАГРУЗИТЬ (SET)" 
                                        Click="BtnSetFile_Click" Background="#2196F3" Foreground="White"
                                        Height="40" FontSize="14" FontWeight="Bold" IsEnabled="False"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="1" 
                                CornerRadius="5" Padding="15">
                            <StackPanel>
                                <TextBlock Text="ТЕКУЩАЯ ПАПКА" FontWeight="Bold" 
                                           Foreground="#EF6C00" Margin="0,0,0,10"/>
                                <TextBlock x:Name="txtCurrentPath" Text="Не подключено" 
                                           TextWrapping="Wrap" FontFamily="Consolas" 
                                           Background="#FFF8E1" Padding="10"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Информация о папке Debug -->
                    <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#CCCCCC" 
                            BorderThickness="0,1,0,0" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Папка Debug клиента:" FontWeight="SemiBold" 
                                       Foreground="#666666" Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtDebugFolder" Text="" FontFamily="Consolas" 
                                       FontSize="11" Foreground="#999999" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Панель статуса -->
        <Border Grid.Row="2" Background="#333333" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtStatus" Text="Не подключено" 
                           Foreground="White" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Ellipse x:Name="statusIndicator" Width="10" Height="10" 
                             Fill="Red" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Отключено" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>