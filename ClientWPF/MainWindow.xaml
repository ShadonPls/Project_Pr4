<Window x:Class="ClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientWPF"
        mc:Ignorable="d"
        Title="FTP Клиент - Упрощенная версия" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель подключения и авторизации -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="IP:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtIpAddress" Grid.Column="1" Text="127.0.0.1" Margin="0,0,10,0"/>

                    <TextBlock Text="Порт:" Grid.Column="2" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtPort" Grid.Column="3" Text="8888" Margin="0,0,10,0"/>

                    <Button x:Name="btnConnect" Grid.Column="4" Content="Подключиться" Click="BtnConnect_Click" 
                            Background="#007ACC" Foreground="White" Padding="10,5"/>
                </Grid>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Логин:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtLogin" Grid.Column="1" Margin="0,0,10,0" Text="Horoshev"/>

                    <TextBlock Text="Пароль:" Grid.Column="2" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <PasswordBox x:Name="txtPassword" Grid.Column="3" Margin="0,0,10,0" Password="Asdfg123"/>

                    <Button x:Name="btnLogin" Grid.Column="4" Content="Войти" Click="BtnLogin_Click"
                            Background="#107C10" Foreground="White" Padding="10,5" IsEnabled="False"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Основная рабочая область -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Статус -->
            <TextBlock x:Name="txtStatus" Grid.Row="0" Text="Не подключено" 
                       Background="#3E3E42" Foreground="White" Padding="10"/>

            <!-- Кнопки управления -->
            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="20">
                <Button x:Name="btnGetFile" Content="1. Получить файл с сервера (GET)" 
                        Click="BtnGetFile_Click" Height="40" Margin="0,10" FontSize="14"
                        Background="#107C10" Foreground="White" IsEnabled="False"/>

                <TextBlock Text="Выберите файл из списка на сервере:" Margin="0,10,0,5" FontWeight="Bold"/>

                <ComboBox x:Name="cmbServerFiles" Height="30" IsEnabled="False"/>

                <Button x:Name="btnSetFile" Content="2. Загрузить файл на сервер (SET)" 
                        Click="BtnSetFile_Click" Height="40" Margin="0,20" FontSize="14"
                        Background="#007ACC" Foreground="White" IsEnabled="False"/>

                <Button x:Name="btnRefreshList" Content="Обновить список файлов" 
                        Click="BtnRefreshList_Click" Height="30" Margin="0,10" Width="200"
                        HorizontalAlignment="Left" IsEnabled="False"/>
            </StackPanel>

            <!-- Информация -->
            <Border Grid.Row="2" BorderBrush="#3E3E42" BorderThickness="1" Margin="5" Padding="10">
                <TextBlock x:Name="txtInfo" Text="Подключитесь к серверу и авторизуйтесь для работы">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="Gray"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=btnLogin, Path=IsEnabled}" Value="True">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="Text" Value="Авторизован. Выберите операцию."/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
        </Grid>

        <!-- Панель логов -->
        <Border Grid.Row="2" Background="#007ACC" Padding="10">
            <TextBlock x:Name="txtLog" Foreground="White" Text="Готов к работе"/>
        </Border>
    </Grid>
</Window>
